<div class="game-view" id=<%= "#{@ttt_game.which_player_show_view}" %>>
<div class="ttt-game">
  <div class="ttt-message">
    <% unless @ttt_game.finished? %>
      <p><%= @ttt_game.current_player_display_name %>'s Turn</p>
    <% else %>
      <% if current_user[:id] == @ttt_game.winner_id %>
        <p>You Win!</p>
      <% else %>
        <%= simple_format(@ttt_game.message) %>
      <% end %>
    <% end %>
  </div>

  <% unless @ttt_game.finished? %>
    <%= render "waiting_board" %>
  <% else %>
    <%= render "winning_board" %>
    <br>
    <%= link_to "New Game?", new_ttt_game_path, class: "btn btn-on-white btn-new-game" %>
  <% end %>
</div>

<%= render "players" %>

