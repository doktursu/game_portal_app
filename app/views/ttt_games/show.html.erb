<h2>TttGame#show</h2>

<ul>
  <li><%= @ttt_game.player1_user.name %> vs <%= @ttt_game.player2_user.name %></li>

  <% if @ttt_game.state %>
    <li>State: <%= @ttt_game.state %></li>
  <% else %>
    <li>State: Ready</li>
  <% end %>

  <% if @ttt_game.winner_id %>
    <li>Winner: <%= @ttt_game.winner_user.name %></li>
  <% end %>

  <% if @ttt_game.is_draw %>
    <li>Draw</li>
  <% end %>

  <% if @ttt_game.message %>
    <li><%= @ttt_game.message %></li>
  <% end %>

  <li>Last played: <%= distance_of_time_in_words_to_now(@ttt_game.updated_at) %></li>

  <% if @ttt_game.finished? %>
    <%= form_for @ttt_game do |f| %>
      <%= f.hidden_field :player1, value: @ttt_game.player1 %>
      <%= f.hidden_field :player2, value: @ttt_game.player2 %>
      <%= f.hidden_field :opponent, value: 'user' %>
      <%= f.hidden_field :current_player, value: @ttt_game.first_player %>
      <div class="form-action">
        <%= f.submit "New Game?" %>
      </div>
    <% end %>
  <% end %>
</ul>