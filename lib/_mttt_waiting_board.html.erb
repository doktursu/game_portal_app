

<table class="ttt-board">
  <% 3.times do |i| %>
    <tr>
      <% 3.times do |j| %>
        <td>
          <div class="ttt-square">
            <% if @mttt_game.board[i][j] %>
              <%= @mttt_game.board[i][j] %>
            <% end %>
          </div>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>